{
    "label" : "lock",
    "action" : "pidof hyprlock || hyprlock",
    "text" : "Lock (L)",
    "keybind" : "l"
}

{
    "label" : "logout",
    "action" : "hyprctl dispatch exit",
    "text" : "Logout (E)",
    "keybind" : "e"
}

{
    "label" : "suspend",
    "action" : "pidof hyprlock || hyprlock && systemctl suspend",
    "text" : "Suspend (U)",
    "keybind" : "u"
}

{
    "label" : "shutdown",
    "action" : "systemctl poweroff",
    "text" : "Shutdown (S)",
    "keybind" : "s"
}

{
    "label" : "hibernate",
    "action" : "systemctl hibernate",
    "text" : "Hibernate (H)",
    "keybind" : "h"
}

{
    "label" : "reboot",
    "action" : "systemctl reboot",
    "text" : "Reboot (R)",
    "keybind" : "r"
}
